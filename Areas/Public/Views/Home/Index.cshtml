@model IEnumerable<TiendaWeb.Models.Productos> 
@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/imagenes/sliders/tiendita-slider.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/imagenes/sliders/tiendita-slider-2.jpg" class="d-block w-100" alt="...">
    </div>
  </div>
</div>

<div class="row">
    @if (Model.Count()>0)
    {
        @foreach (var producto in Model.OrderBy(o => o.id))
        {
            <div class="col-sm-12 col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="@producto.UrlImagen" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-tittle text-center">@producto.nombre</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            @Html.DisplayNameFor(modelItem => producto.precio):@producto.precio
                        </li>
                    </ul>
                    <div class="card-body">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@producto.id" class="car-link">Detalles</a>
                    </div>
                </div>
            </div>
        }
    }
</div>